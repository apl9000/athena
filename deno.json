{
  "name": "@apl/athena",
  "description": "Athena is a collection of functions for math, science and other stuff.",
  "license": "Rives Open Use License (ROUL) â€“ Version 1.0",
  "version": "0.0.4",
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.225.3"
  },
  "tasks": {
    "test": "deno test",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check mod.ts",
    "coverage": "deno test --coverage=coverage && deno coverage coverage --lcov > coverage/coverage.lcov"
  },
  "test": {
    "include": ["src/**/*.spec.ts"]
  },
  "exports": {
    ".": "./mod.ts",
    "./statistics": "./src/statistics.ts",
    "./linear_algebra": "./src/linear_algebra.ts",
    "./geometry": "./src/geometry.ts",
    "./probability": "./src/probability.ts",
    "./errors": "./src/errors.ts"
  },
  "publish": {
    "include": ["LICENSE", "README.md", "mod.ts", "src/**/*.ts"],
    "exclude": [
      "src/**/*.spec.ts",
      ".github/**",
      "coverage/**",
      ".vscode/**",
      "scripts/**"
    ]
  }
}
